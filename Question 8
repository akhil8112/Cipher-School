<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Input to Paragraph</title>
</head>
<body>

  <input type="text" id="userInput" placeholder="Type something..." />
  <button onclick="updateText()">Show Text</button>
  <p id="display"></p>

  <script>
    function updateText() {
      const input = document.getElementById("userInput").value;
      document.getElementById("display").textContent = input;
    }
  </script>

</body>
</html>
